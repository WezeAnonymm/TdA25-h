@using h.Contracts.Games
@using h.Primitives.Games
@attribute [Route(PageRoutes.Game.GameList)]
@rendermode InteractiveWebAssembly

<PageTitle>Výběr úloh</PageTitle>

<div class="cards-pane">
    <h2 class="game-list-h2">
        <span>Výběr úloh</span>
        <a href="/game" style="text-decoration: none; position: absolute; right: 15vw;"><button id="primary-button">Hrát hru</button></a>
    </h2>
    
    <div class="game-cards">
        @foreach(var game in filteredGames)
        {
            string imgSrc = "";
            string alt = "";

            @switch (game.Difficulty)
            {
                case 0:
                    imgSrc = "/IMG/Difficulties/Zacatecnik/zarivka_beginner_modre.svg";
                    alt = "zacatecnik";
                    break;
                case 1:
                    imgSrc = "/IMG/Difficulties/Jednoducha/zarivka_easy_modre.svg";
                    alt = "jednoducha";
                    break;
                case 2:
                    imgSrc = "IMG/Difficulties/Stredni/zarivka_medium_modre.svg";
                    alt = "stredni";
                    break;
                case 3:
                    imgSrc = "IMG/Difficulties/Tezka/zarivka_hard_modra.svg";
                    alt = "tezka";
                    break;
                case 4:
                    imgSrc = "IMG/Difficulties/Extremni/zarivka_extreme_modre.svg";
                    alt = "extremni";
                    break;
            }

            <div class="game-card">
                <div class="name-diff">
                    <h3>@game.Name</h3>
                    <img src=@imgSrc alt=@alt class="diff">
                </div>

                <div class="game-img">
                    @for (int i = 0; i < game.Board.Length; i++)
                    {
                        string elem = "";
                        string imgClass = "";
                        <div class="row">
                            @for (int j = 0; j < game.Board[i].Length; j++)
                            {
                                @switch (game.Board[i][j])
                                {
                                    case "X":
                                        elem = "/IMG/X/X_cervene.svg";
                                        imgClass = "small-x";
                                        alt = "X";
                                        break;
                                    case "O":
                                        elem = "/IMG/O/O_modre.svg";
                                        imgClass = "small-o";
                                        alt = "O";
                                        break;
                                    case "":
                                        elem = "";
                                        imgClass = "";
                                        alt = "";
                                        break;
                                }

                                @if (i % 2 == 0)
                                {
                                    @if (j % 2 == 0)
                                    {
                                        <div class="col-dark">
                                            <img src="@elem" alt="@alt" class="@imgClass">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-light">
                                            <img src="@elem" alt="@alt" class="@imgClass">
                                        </div>
                                    }
                                }
                                else
                                {
                                    @if (j % 2 == 0)
                                    {
                                        <div class="col-light">
                                            <img src="@elem" alt="@alt" class="@imgClass">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-dark">
                                            <img src="@elem" alt="@alt" class="@imgClass">
                                        </div>
                                    }
                                }

                            }
                        </div>
                    }
                </div>
                <div class="action-row">
                    <a class="play" href="@(PageRoutes.Game.GameIndexWithParam(game.Uuid))"><img src="/IMG/icons/play.svg" alt="play"></a>
                    <div class="secondary-row">
                        <a class="edit" href="@(PageRoutes.Game.GameEditorWithParam(game.Uuid))"><img src="/IMG/icons/edit.svg" alt="edit"></a>
                        <button class="delete" @onclick="() => HandleGameDeleteClick(game)"><img src="/IMG/icons/red-bin.svg" alt="delete"></button>
                    </div>
                </div>
            </div>   
        }
    </div>
</div>

<div class="filters">
    <h2 style=" color: #D5D5D5; ">Filtry</h2>
    
    <div class="selected">
        @if(!string.IsNullOrEmpty(appliedFilter.GameName))
        {
            <span>@($"\"{appliedFilter.GameName}\"")</span>
        }

        @if(appliedFilter.IsBeginner)
        {
            <span>Začátečník</span>
        }
        @if(appliedFilter.IsEasy)
        {
            <span>Jednoduchá</span>
        }
        @if(appliedFilter.IsMedium)
        {
            <span>Střední</span>
        }
        @if(appliedFilter.IsHard)
        {
            <span>Těžká</span>
        }
        @if(appliedFilter.IsExtreme)
        {
            <span>Extrémní</span>
        }

        @if(appliedFilter.UpdatedWithin is not null)
        {
            <span>@($"{appliedFilter.UpdatedWithin.Value.Days} {(appliedFilter.UpdatedWithin.Value.Days == 1 ? "den" : "dní")}")</span>
        }
    </div>
    <div class="filter-wrapper">
        <Dropdown Title="Obtížnost">
            <div class="option">
                <InputCheckbox @bind-Value="filter.IsBeginner" />
                <span>Začátečník</span>
            </div>
            <div class="option">
                <InputCheckbox @bind-Value="filter.IsEasy" />
                <span>Jednoduchá</span>
            </div>
            <div class="option">
                <InputCheckbox @bind-Value="filter.IsMedium" />
                <span>Střední</span>
            </div>
            <div class="option">
                <InputCheckbox @bind-Value="filter.IsHard" />
                <span>Těžká</span>
            </div>
            <div class="option">
                <InputCheckbox @bind-Value="filter.IsExtreme" />
                <span>Extrémní</span>
            </div>
        </Dropdown>
        <Dropdown Title="Datum úpravy">
            <InputRadioGroup @bind-Value="filter.UpdatedWithin">
                <div class="option">
                    <InputRadio Value="TimeSpan.FromDays(1)" />
                    <span>1 den</span>
                </div>
                <div class="option">
                    <InputRadio Value="TimeSpan.FromDays(7)" />
                    <span>1 týden</span>
                </div>
                <div class="option">
                    <InputRadio Value="TimeSpan.FromDays(14)" />
                    <span>2 týdny</span>
                </div>
                <div class="option">
                    <InputRadio Value="TimeSpan.FromDays(30)" />
                    <span>1 měsíc</span>
                </div>
                <div class="option">
                    <InputRadio Value="TimeSpan.FromDays(90)" />
                    <span>3 měsíce</span>
                </div>
            </InputRadioGroup>
        </Dropdown>
        <Dropdown Title="Název úlohy">
            <InputText class="name-filter text-input" @bind-Value="filter.GameName" placeholder="Zadejte název úlohy"/>
        </Dropdown>
        <div class="filter-buttons">
            <button class="btn-filter primary-button" @onclick="HandleFilterClick">Filtrovat</button>
            <button class="btn-cancel-filters secondary-button" @onclick="HandleFilterReset">Zrušít filtry</button>
        </div>
    </div>
</div>