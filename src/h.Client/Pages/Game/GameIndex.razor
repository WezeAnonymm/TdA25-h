@using System.Diagnostics
@using System.Runtime.CompilerServices
@using h.Primitives.Games
@attribute [Route(PageRoutes.Game.GameIndex)]
@rendermode InteractiveWebAssembly
@layout NoNavLayout

<div class="win-popup">
    <div class="win-card">
        <div class="win-r1">
            <h3>Gratulujeme!</h3>
        </div>
        <div class="win-r2">
            <h3>VYHRÁVÁ HRÁČ</h3>
            <div class="winner">
                <img src="/IMG/X/X_cervene.svg" alt="X" style="height: 15px; width: 15px">
            </div>
        </div>
        <div class="win-r3">
            <button class="new-game">Nová hra</button>
            <a href="/game/list"><button class="back-to-list">Zpět na výběr</button></a>
        </div>
    </div>
</div>
<div class="save-popup">
    <div class="save-card">
        <div class="game-field mini" @ref="gameFieldRef">
            @for (int y = 0; y < 15; y++)
            {
                @* "data-cell-hover-symbol" set via js *@
                <div class="game-field-row mini-row">
                    @for (int x = 0; x < 15; x++)
                    {
                        int id1D = y * 15 + x;
                        var xCopy = x;
                        var yCopy = y;

                        string background = (id1D % 2 == 0) ? "#f9f9f9" : "white";

                        <div class="cell empty"
                             style="width: 25px; background-color: @background; border: none; display: flex; align-items: center; justify-content: center"
                             data-x="@xCopy"
                             data-y="@yCopy">
                            @* Symbols added via js *@
                            @* <img src="" /> *@
                        </div>
                    }
                </div>

            }
        </div>
        <div class="save-info">
            <h2>Uložit úlohu</h2>
            <form action="" class="save-game-form">
                <input type="text" class="text-input" placeholder="Jméno úlohy">
                <div class="difficulty-selector sheet">
                    <div class="left">Nejjednodušší</div>
                    <div class="right">Nejobtížnější</div>
                    <input class="slider" type="range" min="0" max="@(GameDifficulty.List.Count-1)"/>
                    @* <img class="bulb"/> *@
                </div>
                <button class="save-game primary-button">Uložit hru</button>
                <button class="exit-save-menu secondary-button">Zrušit</button>
            </form>
        </div>
    </div>
</div>

<div class="card">
    <div class="primary-column">
        <div class="info-row">
            <a href="/game/list">
                <button class="to-games">
                    <img src="/IMG/icons/end-game-arrow.svg" alt="back" style="height: 15px">
                    <h3>Ukončit hru</h3>
                </button>
            </a>
            <div class="game-name">
                <h2>Placeholder</h2>
            </div>
            <div class="turn">
                @if (xOnTurn)
                {
                    turnDisplaySrc = "/IMG/X/X_cervene.svg";
                    turnDisplayAlt = "X";
                }
                else
                {
                    turnDisplaySrc = "/IMG/O/O_modre.svg";
                    turnDisplayAlt = "O";
                }
                <img src=@turnDisplaySrc alt=@turnDisplayAlt>
            </div>
        </div>
        <div class="game-field" @ref="gameFieldRef" data-cell-hover-symbol="@(xOnTurn ? "X" : "O")">
            @for (int y = 0; y < 15; y++)
            {
                <div class="game-field-row">
                    @for (int x = 0; x < 15; x++)
                    {
                        int id1D = y * 15 + x;
                        var xCopy = x;
                        var yCopy = y;

                        string background = (id1D % 2 == 0) ? "#f9f9f9" : "white";

                        <div class="cell empty"
                             style="width: 50px; background-color: @background;"
                             data-x="@xCopy"
                             data-y="@yCopy">

                            @* Symbols added via js *@
                            @* Any inner content is removed when cell is placed !!! *@
                            @* <img src="" /> *@
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <div class="secondary-column">
        <div class="round">
            <h3>10. kolo</h3>
        </div>
        <div class="addit-info" style="display: @(IsVisible ? "flex" : "none")">
            <div class="info">
                <h3 style="color: #0070BB">Obtížnost</h3>
                <span>Placeholder</span>
            </div>
            <div class="info">
                <h3 style="color: #0070BB">Vytvoření hry</h3>
                <span>yyyy-mm-dd hh:mm</span>
            </div>
            <div class="info">
                <h3 style="color: #0070BB">Upravení hry</h3>
                <span>yyyy-mm-dd hh:mm</span>
            </div>
        </div>
        <div class="save-game">
            <button class="save-game-btn primary-button">Uložit hru</button>
        </div>
    </div>
</div>

